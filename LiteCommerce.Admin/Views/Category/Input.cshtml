@model LiteCommerce.DomainModels.Category
@{

}
<div class="box box-primary">
    <form role="form" action="~/Category/Input" method="post">
        <div class="box-header text-right">
            <a href="~/Category">Back to List</a>
        </div>
        <div style="color: red; font-weight: bold">@Html.ValidationSummary()</div>
        <div class="box-body">
            <input type="hidden" name="SupplierID" value="@Model.CategoryID">
            <div class="form-group">
                <label>Category Name:</label>
                <input type="text" class="form-control" placeholder="Enter Category Name" value="@Model.CategoryName" name="CategoryName">
            </div>
            <div class="form-group">
                <label>Description:</label>
                <textarea rows="4" class="form-control" placeholder="Enter Description" name="Description">@Model.Description</textarea>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Category">
                Cancel
            </a>
        </div>
    </form>
</div>
