@model LiteCommerce.DomainModels.Shipper
@{

}
<div class="box box-primary">
    <form role="form" action="~/Shipper/Input" method="post">
        <div class="box-header text-right">
            <a href="~/Shipper">Back to List</a>
        </div>
        <div style="color: red; font-weight: bold">@Html.ValidationSummary()</div>
        <div class="box-body">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID">
            <div class="form-group">
                <label>Company Name:</label>
                <input type="text" class="form-control" placeholder="Enter Company Name" value="@Model.CompanyName" name="CompanyName">
            </div>
            <div class="form-group">
                <label>Phone:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-phone"></i>
                    </div>
                    <input type="text" class="form-control" value="@Model.Phone" name="Phone">
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Shipper">
                Cancel
            </a>
        </div>
    </form>
</div>
